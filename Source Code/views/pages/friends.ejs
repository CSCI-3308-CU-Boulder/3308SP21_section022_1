<%- include('../template/head') %>

<%- include('../template/nav') %>

<div class="container">

  <div class="card-header" >

    My Friends

  </div>
  <% if (data){
    var friends = '';
    data.forEach(function(item){
      var x = Math.floor((Math.random() * 6) + 1);
      x = "../../public/img/icon" + String(x) + "@2x.png";
      console.log(x);
      friends += '<div class="col"><div class="card"><img class="img" src= '+x+' height="200" width="200" alt="Card image cap"><div class="card-body"><h3>'+ item.UserName+'</h3></div></div></div>'
    });
    var hold = '<div class="row">'+ friends +' </div>'
    %>

    <%- hold %>
  <% } %>

</div>

